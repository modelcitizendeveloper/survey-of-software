#!/bin/bash
# Quick cheatsheet viewer for obs-update

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ "$1" == "obs-update" ] || [ "$1" == "obs" ]; then
    cat "$SCRIPT_DIR/OBS-UPDATE-CHEATSHEET.md"
else
    echo "Unknown cheatsheet: $1"
    echo ""
    echo "Available cheatsheets:"
    echo "  c obs-update    # OBS overlay control quick reference"
    exit 1
fi
